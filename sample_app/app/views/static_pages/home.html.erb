  <!-- Introduction menu -->
  <div class="w3-col l4">
    <!-- About Card -->
    <div class="w3-card-2 w3-margin w3-margin-top">
      <img src="https://img00.deviantart.net/0085/i/2016/200/f/6/welcome_jose_mourinho___wallpaper_by_omarbedewygfx-daaldk1.png" style="width:100%">
      <div class="w3-container w3-white">
