<div class="w3-padding left-16">

<%= form_for(post) do |f| %>
    <%= render 'shared/error_message_posts' %>
    <div class="field">
      <div class="form-group"> <%= f.label :title %> </div>
      <div class="form-group"> <%= f.text_field :title %> </div>
    </div>

    <div class="field">
      <div class="form-group"> <%= f.label :body %> </div>
      <div class="form-group"> <%= f.text_area :body%> </div>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
</div>