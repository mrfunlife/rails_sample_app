<div class="row w3-padding left-16">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_message' %>
        <div class="form-group">
         <%= f.label :name %> </div>
         <div> <%= f.text_field :name, class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label :email %></div>
        <div>  <%= f.email_field :email, class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label :password %></div>
        <div><%= f.password_field :password, class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation" %> </div>
        <div>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>